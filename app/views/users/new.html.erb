<%= provide(:title, "Sign up") %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

     
        
     <%= f.label :role, "User Type" , class: "control-label"%>
      <%= f.radio_button :role, "buyer", :checked => true %>
      <%= f.label :role, "Buyer" , :value => "buyer", class: 'radio-inline'%>
      <%= f.radio_button :role, "seller" %>
      <%= f.label :role, "Seller" , :value => "seller",class: 'radio-inline'%>
     
     

      <div class="button_div">
        <%= f.submit "Create my account", class: "btn btn-primary" %> 
      </div>
      <p>Already have an account? <%= link_to "Log In now", login_path %></p>
   
    <% end %>
  </div>
</div>