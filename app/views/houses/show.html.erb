<%= provide(:title, "My Listing") %>
<h1>My Listings</h1>
<div class="container">
	<% if current_user.id == @house.user_id %>
		<div class="ticket_info_container">
		<%= current_user.name %>
		<%= current_user.email %>
		<h2>Price : $<%= @house.price %></h2>
		

		<h2>House Type : <%= @house.house_type %></h2>
		
		<h2>Bathrooms : <%= @house.bathroom %></h2>
		
		<h2>Bedrooms : <%= @house.room %></h2>
		
		
		<h2>Description : <%= @house.description %></h2>
		

	</div>
	<div class="button_div">
		<%= link_to "Edit", edit_house_path(@house), class: "btn btn-lg btn-primary" %>
	</div>
	<% else %>
		<h2>You don't have any houses to show</h2>
		<%= link_to "Add it now!", addlisting_path, class: "btn btn-lg btn-primary" %>
	<% end %>
</div>

 